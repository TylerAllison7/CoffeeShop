<div class="modal fade" id="productmodal<%= product.id %>" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" style="background-color: blanchedalmond;">
      <div class="modal-header">
        <h5 class="modal-title"><%= product.item %> Information</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          Price: $<%= product.price %> <br />
          Stock: <%= product.availability %>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        
      </div>
    </div>
  </div>  
</div>
